@model IEnumerable<CarApp.Models.Car>

@{
ViewData["Title"] = "Car List";
}

<div class="container mt-4">
    <h2>Car List</h2>

    <p>
        <a class="btn btn-primary" href="@Url.Action("Create")">Criar novo Carro</a>
    </p>

    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var car in Model)
        {
        <tr>
            <td>@car.Id</td>
            <td>@car.Marca</td>
            <td>@car.Modelo</td>
            <td>@car.Ano</td>
            <td>
                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = car.Id })">Editar</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = car.Id })" onclick="return confirm('Tem certeza que deseja excluir?');">Excluir</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
