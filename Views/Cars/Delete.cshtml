@model CarApp.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this car?</h3>

<div>
    <h4>Car</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Marca
            </dt>
            <dd class="col-sm-10">
                @Model.Marca
            </dd>
            <dt class="col-sm-2">
                Modelo
            </dt>
            <dd class="col-sm-10">
                @Model.Modelo
            </dd>
            <dt class="col-sm-2">
                Ano
            </dt>
            <dd class="col-sm-10">
                @Model.Ano
            </dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>